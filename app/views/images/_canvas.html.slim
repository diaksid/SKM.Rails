- if local_assigns[:light]
  - original = canvas.upload.image || canvas.upload
  canvas.h-bg--cover[
    class=local_assigns[:class_name]
    width=canvas.upload.thumb.width
    height=canvas.upload.thumb.height
    data-lazy=canvas.upload.thumb.url
    data-light=light
    data-href=original.url
    ]
  link%thumbnailUrl[href=canvas.upload.thumb.url]
  link%image[href=original.url]
- else
  canvas.h-bg--cover[
    class=local_assigns[:class_name]
    width=canvas.upload.thumb.width
    height=canvas.upload.thumb.height
    data-lazy=canvas.upload.thumb.url
    ]
  link%image[href=canvas.upload.thumb.url]
